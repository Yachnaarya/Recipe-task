<h1>Listing Recipes</h1>
<%= form_with url: "/recipes/search_recipe", method: :get do |form| %>
  <%= form.text_field :name, placeholder: "Cuisine" %>
  <%= form.text_field :ingredient, placeholder: "Ingredient" %>
  <%= form.submit "Search" %>
<% end %>
<%= link_to 'New Recipe', new_recipe_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Instructions</th>
    <th>Ingredients</th>
    <th colspan="3"></th>
  </tr>
 
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.instructions %></td>
      <td><%= recipe.ingredients.first&.name  %></td>
      <td><%= link_to 'Show', recipe_path(recipe) %></td>

    </tr>
  <% end %>
</table>